{
  "compilerOptions": {
    "types": ["node"],
    "module": "Node16",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "verifyEmailIdentity.mjs", "typings/**/*.d.ts"]
}
